doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Stretchy - A Pure CSS (Cascading Stylesheets) rotating, stretchable Thingie (i.e., Mesh)
    link(rel='stylesheet', href='styles/style.css')
    //if IE
      script(src='http://html5shiv.googlecode.com/svn/trunk/html5.js')
  body#home
    #container
      input#btn(type='checkbox')
      label.btn(for='btn')
        span.unchecked Play!
        span.checked Pause!
      .surface
        .compressor
          -i=16
          -while(i--)
           .row
            -j=16
            -while(j--)
              .point